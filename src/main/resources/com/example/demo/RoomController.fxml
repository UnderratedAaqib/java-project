<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.demo.RoomController">
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 24px;" text="Room Management" />
        <TableView fx:id="tableRooms">
            <columns>
                <TableColumn fx:id="colRoomNumber" text="Room Number" />
                <TableColumn fx:id="colType" text="Type" />
                <TableColumn fx:id="colStatus" text="Status" />
                <TableColumn fx:id="colPrice" text="Price" />
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button fx:id="btnAddRoom" onAction="#handleAddRoom" text="Add Room" />
            <Button fx:id="btnEditRoom" onAction="#handleEditRoom" text="Edit Room" />
            <Button fx:id="btnDeleteRoom" onAction="#handleDeleteRoom" text="Delete Room" />
        </HBox>
        <HBox spacing="10">
            <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh" />
            <Button fx:id="btnBack" onAction="#handleBack" text="Back" />
        </HBox>
    </VBox>
</AnchorPane>
